<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_queryTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text="Write you query"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:id="@+id/EDT_query"
            android:hint="here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_queryTxt"/>

        <Button
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/EDT_query"
            android:layout_marginHorizontal="30dp"
            android:layout_alignRight="@+id/EDT_query"
            android:layout_below="@+id/EDT_query"
            android:id="@+id/btn_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"/>

    </RelativeLayout>

</FrameLayout>